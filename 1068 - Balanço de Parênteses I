#include <stdio.h>
#include <string.h>

int verifica_parenteses(const char *expressao) {
    int contador = 0;
    
    for (int i = 0; i < strlen(expressao); i++) {
        if (expressao[i] == '(') {
            contador++;
        } else if (expressao[i] == ')') {
            if (contador == 0) {
                // Parêntese de fechamento sem abertura correspondente
                return 0;
            }
            contador--;
        }
    }
    
    // Se contador é zero, a expressão está correta; caso contrário, está incorreta
    return contador == 0;
}

int main() {
    char expressoes[5][100]; // Define uma matriz para armazenar até 5 expressões com no máximo 99 caracteres cada
    
    for (int i = 0; i < 5; i++) {
        printf("Digite a expressao %d: ", i + 1);
        scanf("%99s", expressoes[i]); // Lê a expressão e limita a entrada a 99 caracteres para evitar overflow
        if (verifica_parenteses(expressoes[i])) {
            printf("correct\n");
        } else {
            printf("incorrect\n");
        }
    }

    return 0;
}
